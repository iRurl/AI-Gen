<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:tag="layout/activity_edit_user_0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_back_black2"
                android:tag="binding_1" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="编辑资料"
                android:textColor="#141414"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:tag="binding_2"
                android:text="保存"
                android:textColor="@color/color_14b2b1"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/grey_f5" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="158dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:tag="binding_3">

                <FrameLayout
                    android:id="@+id/edit_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/iv_user_icon"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:id="@+id/icon_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@mipmap/icon_photo" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="修改头像"
                    android:textColor="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:tag="binding_4"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="头像"
                android:textColor="#99858585"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/enter_right" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="基础信息"
            android:textColor="@color/black_141414"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:tag="binding_5">

                <TextView
                    android:id="@id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="昵称"
                    android:textColor="#99858585"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/tv"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_username"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textColor="@color/black_141414"
                        android:textSize="15sp" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="@color/grey_f5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:tag="binding_6">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="性别"
                    android:textColor="#99858585"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/tv3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_sex"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:hint="请输入性别"
                        android:background="@color/white"
                        android:textColor="@color/color_14b2b1"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="@color/grey_f5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:tag="binding_6">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="职业"
                    android:textColor="#99858585"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/tv4"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_work"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:hint="请输入职业"
                        android:background="@color/white"
                        android:textColor="@color/color_14b2b1"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="64dp"
            android:text="个性签名"
            android:textColor="#ff141414"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_qm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:hint="写一段话简单的介绍一下自己"
            android:textColor="@color/black_141414"
            android:textColorHint="#99858585"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="23dp"
            android:background="@color/grey_f5" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>