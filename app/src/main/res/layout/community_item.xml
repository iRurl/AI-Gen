<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    app:contentPaddingTop="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/com_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:riv_corner_radius="50dp" />

            <TextView
                android:id="@+id/com_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="nnn"
                android:textStyle="bold"
                android:textColor="@color/textblackcolor"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/com_button"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="+ 关注"
                android:textColor="@color/color_14b2b1"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/com_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            android:textColor="@color/textblackcolor"
            android:text="评论内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/btn_share"
                android:textColor="@color/textgreycolor"
                android:textSize="13sp"
                android:paddingStart="30dp"
                android:text="分享" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1.2" />

            <Button
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/btn_com"
                android:drawablePadding="-30dp"
                android:textColor="@color/textgreycolor"
                android:textSize="13sp"
                android:text="0" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1.3" />

            <Button
                android:id="@+id/likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-30dp"
                android:background="@null"
                android:textColor="@color/textgreycolor"
                android:textSize="13sp"
                android:drawableStart="@drawable/btn_like"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

