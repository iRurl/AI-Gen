<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/tj_wenanheji"
                app:riv_corner_radius_bottom_left="5dp"
                app:riv_corner_radius_bottom_right="5dp"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp" />

            <LinearLayout
                android:id="@+id/wahj1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:text="表达乐观心态的文案，简简单单，就是生活！"
                    android:textColor="@color/textblackcolor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="生活，只需那么一点颜色，简简单单，足以温暖很多简单着快乐，知足着幸福，你在我在，平淡相守。"
                    android:textColor="@color/textgreycolor"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DEF4E8"
                    android:padding="5dp"
                    android:text="查看全部"
                    android:textColor="@color/color_14b2b1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wahj2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/point"
                android:drawableRight="@drawable/next"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/textgreycolor"
                android:text="朋友圈点赞最多的正能量句子，选一句送给自己！" />

            <TextView
                android:id="@+id/wahj3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/point"
                android:drawableRight="@drawable/next"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/textgreycolor"
                android:text="有关读书的文案，唯美惊艳，富有涵养。" />
            <TextView
                android:id="@+id/wahj4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/point"
                android:drawableRight="@drawable/next"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/textgreycolor"
                android:text="描写遇见的文案，快挑一句发给茫茫人海中遇见的TA！" />
        </LinearLayout>


    </LinearLayout>

