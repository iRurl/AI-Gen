<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        用户-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                app:riv_corner_radius="50dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注 0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝 0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获赞 0" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_form_bg"
                        android:drawableRight="@drawable/next"
                        android:text="个人主页" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <!--        常用功能-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用功能" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:text="AI作品\n创作合集都在这" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:text="AI作品\n创作合集都在这" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:text="AI作品\n创作合集都在这" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        积分-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0\n积分" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon"
                        android:text="赚积分" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon"
                        android:text="换好物" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon"
                        android:text="积分夺宝" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--        其他功能-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他功能" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="4"
                    android:columnCount="4">
                    <Button
                        android:id="@+id/btn_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="3"
                        android:layout_row="1"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="3"
                        android:layout_row="2"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|center"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="意见反馈"
                        android:drawableTop="@mipmap/icon"/>
                </GridLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海量文案资源·文案工具·兴趣交流社区"
            android:textStyle="bold"
            />



    </LinearLayout>

</ScrollView>
